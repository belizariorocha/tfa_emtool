<div class="page-header">
  <h1>
    Emergency Wardens
    <a href="/wardens/new" class="btn btn-lg btn-success">New Warden</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Office</th>
        <th>Role</th>
        <th>Photo</th>
        <th>Name</th>
        <th>e-mail</th>
        <th>Telephone</th>
        <th>Acknowledged?</th>
        <th>Actions</th>
      </tr>

      <% @wardens.each do |warden| %>
      <tr>
        <td><%= warden.role %></td>
        <td><%= warden.acknowledged %></td>
        <td><%= warden.office_id %></td>
        <td><%= warden.staff_member_id %></td>
        <td><%= warden.role %></td>
        <td><%= warden.acknowledged %></td>
        <td><%= warden.office_id %></td>
        <td>
          <a href="/wardens/<%= warden.id %>" class="btn btn-primary">Show</a>
          <a href="/wardens/<%= warden.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_warden/<%= warden.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
